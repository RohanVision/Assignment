<%- include('partials/header.ejs') %>

  <body>

    <%- include('partials/navbar.ejs') %>

      <main>
        <section class="my-5">
          <h2 class="text-center"></h2>

          <div class="w-75 m-auto">

            <form method="post" action="/update-g2_page">
              <input type="hidden" value="<%= user.license_no %>" name="license_no">
              <div class="mb-3">
                <label for="first_name" class="form-label">First Name</label>
                <input type="text" class="form-control" name="first_name" id="first_name" disabled
                  value="<%= user.firstname %>">
              </div>

              <div class="mb-3">
                <label for="last_name" class="form-label">Last Name</label>
                <input type="text" class="form-control" name="last_name" id="last_name" disabled
                  value="<%= user.lastname %>">
              </div>

              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" name="email" id="email" disabled
                value="<%= user.email %>">
              </div>

              <div class="mb-3">
                <label for="license_no" class="form-label">License No</label>
                <input type="text" size="8" class="form-control" name="license_no" id="license_no"
                  value="<%= user.license_no %>" disabled>
              </div>

              <div class="mb-3">
                <label for="age" class="form-label">Age</label>
                <input type="number" class="form-control" name="age" id="age" disabled value="<%= user.age %>">
              </div>

              <div class="mb-3">
                <label for="dob" class="form-label">Date of Birth</label>
                <input type="text" class="form-control" name="dob" id="dob" disabled
                  value="<%= new Date(user.dob).toDateString() %>">
              </div>

              <h5 class="my-5 text-center">Car Details</h5>
              <div class="mb-3">
                <label for="maker" class="form-label">Maker</label>
                <input type="text" class="form-control" name="maker" id="maker" value="<%= user.car_details.maker %>">
              </div>

              <div class="mb-3">
                <label for="model" class="form-label">Model</label>
                <input type="text" class="form-control" name="model" id="model" value="<%= user.car_details.model %>">
              </div>

              <div class="mb-3">
                <label for="year" class="form-label">Year</label>
                <input type="number" class="form-control" name="year" id="year" value="<%= user.car_details.year %>">
              </div>

              <div class="mb-3">
                <label for="plat_no" class="form-label">Plat No</label>
                <input type="text" class="form-control" name="plat_no" id="plat_no"
                  value="<%= user.car_details.plat_no %>">
              </div>

              <button type="submit" class="btn btn-primary">Update</button>
            </form>


          </div>
        </section>
      </main>

  </body>

  <%- include('partials/footer.ejs') %>